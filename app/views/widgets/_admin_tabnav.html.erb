              :generate_css => true do 
  if current_user.has_role? 'admin'     
    add_tab do |t|
      t.named 'User'
      t.titled 'User manage'
      t.links_to :action => 'manage_user'
    end
    add_tab do |t|
      t.named 'Role'
      t.titled 'Role manage'
      t.links_to :controller => 'admin', :action => 'manage_role'
    end
    add_tab do |t|
      t.named 'Topic'
      t.titled 'Topic manage'
      t.links_to :controller => 'manage_topic'
    end 
    add_tab do |t|
      t.named 'Post'
      t.titled 'Post manage'
      t.links_to :controller => 'admin', :action => 'manage_post'
    end 
    add_tab do |t|
      t.named 'Blog'
      t.titled 'Blog manage'
      t.links_to :controller => 'admin', :action => 'manage_blog'
    end 
    add_tab do |t|
      t.named 'Gallary'
      t.titled 'Gallary manage'
      t.links_to :controller => 'manage_gallary'
    end 
    add_tab do |t|
      t.named 'Message'
      t.titled 'Message manage'
      t.links_to :controller => 'admin', :action => 'manage_message'
    end 
    add_tab do |t|
      t.named 'News'
      t.titled 'Site news manage'
      t.links_to :controller => 'admin', :action => 'manage_news'
    end 
  end
