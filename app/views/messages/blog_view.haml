.span-18
  #blog_title
    %h2
      = @article.title
  #blog_time
    = distance_before_now(@article.created_at)
  %br
  #blog_body
    = textilize @article.body
  %hr
  #comments_list
    %h3
      = @article.follow_messages.count
      = t 'blog.comments'
    - pos = 1
    - for comment in @article.follow_messages
      .box
        %div{:id=>"message-#{comment.id}"}
          = "##{pos}"
        #commenter
          = link_to comment.user.login, user_path(comment.user) unless comment.user.nil?
          = t 'blog.comment_at' 
          = distance_before_now(comment.created_at)
        #comment_title
          = comment.title

        #comment_body
          = comment.body
      - pos += 1

  %hr

  #comments_box
    - form_for :message, @comment, :url => {:action => 'create'} do |f|
      = f.hidden_field :follow_id, :value => @article.id
      .span-10.colborder
        %p
          = f.label t('global.title')
          %br
          = f.text_field :title
        %p
          = f.label t('blog.comment')
          %br
          = f.text_area :body
      .span-7.last
        - unless current_user
          %p
            = f.label t('page.name')
            %br
            = f.text_field :comment_user
          %p
            = f.label t('page.email')
            %br
            = f.text_field :comment_email
          %p
            = f.label t('page.website')
            %br
            = f.text_field :comment_website
      .span-18
        %p
          = submit_tag t('global.post')
        
.span-6.last
  = t 'global.links'
  %ul
    %li
      = link_to 'Gallary', :controller => 'gallaries', :action => 'view', :id => @user
  %hr
  = t 'blog.last_articles'
  %hr
  %ul
    - for article in @articles
      %li
        = link_to article.title, user_article_url(@user,article)
  = t 'blog.latest_comments' 
  = @latest_comments.count
  %hr
  %ul
    - for comment in @latest_comments
      %li
        - link = url_for :controller => 'messages', :action => 'show', :id => comment.follow_message, :anchor=>"message-#{comment.id}"
        = link_to comment.user.login, user_article_path(@user, comment), {:href => link} 
        = ": "
        = h strip_tags(comment.body)

