.span-18
  #blog_title
    = @article.title
  #blog_time
    = @article.created_at
  #blog_body
    = RedCloth.new(@article.body).to_html
  %hr
  #comments_list
    %h3
      = "Comments "
    - pos = 1
    - for comment in @article.follow_messages
      .box
        %div{:id=>"message-#{comment.id}"}
          = pos
        #commenter
          = link_to comment.user.login, user_path(comment.user) unless comment.user.nil?
          = " comment at: "
          = comment.created_at
        #comment_title
          = comment.title

        #comment_body
          = comment.body
      - pos += 1

  %hr

  #comments_box
    - form_for :message, @comment, :url => {:action => 'create'} do |f|
      = f.hidden_field :follow_id, :value => @article.id
      .span-10.colborder
        %p
          = f.label "Title:"
          %br
          = f.text_field :title
        %p
          = f.label "Comment:"
          %br
          = f.text_area :body
      .span-7.last
        - unless current_user
          %p
            = f.label "Name:"
            %br
            = f.text_field :comment_user
          %p
            = f.label "Email:"
            %br
            = f.text_field :comment_email
          %p
            = f.label "Website:"
            %br
            = f.text_field :comment_website
      .span-18
        %p
          = submit_tag 'Post'
        
.span-6.last
