%table
  %thead
    %tr
      %th{:width=>'%1'}
      %th{:width=>'%20'} Title
      %th{:width=>'%30'} Content
      %th{:width=>'%20'} Target
      %th{:width=>'%20'} Time
  %tfoot
  %tbody
    - for msg in @sent_messages
      %tr
        %td
          = check_box_tag "messages[]", msg.id
        %td
          = link_to msg.title, message_path(msg)
        %td
          = h msg.body
        %td
          - targets = msg.receivers
          - targets.each do |t|
            = link_to t.login, user_path(t)
            = ' '
        %td
          = msg.created_at
= will_paginate @sent_messages
