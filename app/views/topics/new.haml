%h1 New topic

- form_for(@topic) do |f|
  = f.error_messages

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p 
    = f.label :parent_id
    %br
    = f.text_field :parent_id

  %p
    = f.label :description
    %br
    = f.text_area :description

  %p
    = f.submit "Create"

= link_to 'Back', topics_path
