.span-12
  = "Name: "
  = h @topic.name
.span-12.last
  -# unless @topic.parent_id.nil?
    = "Parent: "
    = h @topic.parent_topic.name
.span-24
  = "Description: "
  = h @topic.description
%hr

.span-18
  = full_topic_path(@topic)
.span-6.last
  = link_to 'Edit', edit_topic_path(@topic) |
  = link_to 'Back', topics_path
  = link_to 'Post', :action => 'post', :id => @topic

%table
  %tr
    %th{:width => '50%'} Title
    %th{:width => '15%'} Post
    %th{:width => '15%'} Last post
    %th{:width => '5%'} Replies
    %th{:width => '5%'} Views
  - for message in @messages
    %tr
      %td
        - if !current_user.nil? && current_user.has_role?('admin')
          = link_to 'Delete', message_path(message), :method => :delete
        = link_to excerpt(message.title, message.title[0,18], :radius => 2), message, :title => message.title
      %td
        = link_to message.user.login, message.user
        %br
        = h distance_of_time_in_words(message.created_at, Time.now)
      - reply_messages = message.follow_messages.find( :all, :order => 'created_at DESC' )
      %td
        - unless reply_messages.count == 0
          = 'by '
          = link_to reply_messages[0].user.login, reply_messages[0].user
          %br
          = h distance_of_time_in_words(reply_messages[0].created_at)
        - else
          = 'by '
          = link_to message.user.login, user_path(message.user)
          %br
          = h distance_of_time_in_words(Time.now, message.updated_at)
        %td
          = message.follow_messages.count
        %td
          = message.view_count
      -#
        %td
          = link_to 'Delete', message, :confirm => 'Are you sure?', :method => :delete

= will_paginate @messages
