!!! XML
!!!
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'menu'
    = stylesheet_link_tag 'lightbox'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults
    = javascript_include_tag 'menu'
    =# javascript_include_tag 'scriptaculous'
    = active_scaffold_includes
    %title ToPicTure
  %body
    .container
      .span-12
        %h1 TopicTure
      .span-12.last
        .span-12
        .span-12
          = navigation :status
      .span-24
        #menu
          %ul.level1{:id=>'root'}
            %li
              = link_to 'Site', '/site'
            %li.sep
              |
            %li
              = link_to 'Forum', topics_path
            %li.sep 
              |
            %li
              = link_to 'Blog', '/blog'
            %li.sep
              |
            %li
              = link_to 'Gallary', gallaries_url 
            - if current_user && current_user.has_role?('admin')
              %li.sep
                |
              %li
                = link_to 'Admin', :controller => 'admin'

      %hr
      - if flash[:notice]
        .notice
          = flash[:notice]
      - if flash[:success]
        .success
          = flash[:success]
      - if flash[:error]
        .error
          = flash[:error]
      = yield :panel
      = yield
      %hr
      #footer.span-24
        %span.quiet Topicture v0.1
