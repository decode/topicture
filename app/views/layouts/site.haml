!!! XML
!!!
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'menu'
    = stylesheet_link_tag 'lightbox'
    = stylesheet_link_tag 'site'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults
    = javascript_include_tag 'menu'
    = javascript_include_tag 'forum'
    = javascript_include_tag 'gallary'
    = javascript_include_tag 'curvycorners'
    = active_scaffold_includes
    / 
      :javascript
        //<![CDATA[
        window.onload = function() {
            settings = {
                tl: { radius: 10 },
                tr: { radius: 10 },
                bl: { radius: 10 },
                br: { radius: 10 },
                antiAlias: true
            }
            curvyCorners(settings, "rounded");
        }
        //]]>

    %title ToPicTure
  %body
    .container
      .span-12
        %h1 TopicTure
      .span-12.last
        .span-12
        .span-12
          = navigation :status
      .span-24
        #menu
          %ul.level1{:id=>'root'}
            %li
              = link_to t('site.label'), '/site'
            %li.sep
              |
            %li
              = link_to t('topic.label'), topics_path
            %li.sep 
              |
            %li
              = link_to t('blog.label'), '/blog'
            %li.sep
              |
            %li
              = link_to t('gallary.label'), gallaries_url 
            - if current_user && current_user.has_role?('admin')
              %li.sep
                |
              %li
                = link_to t('admin.label'), :controller => 'admin'

      %hr
      - if flash[:notice]
        .notice
          = flash[:notice]
      - if flash[:success]
        .success
          = flash[:success]
      - if flash[:error]
        .error
          = flash[:error]
      = yield :panel
      = yield
      %hr
      #footer.span-24
        %span.quiet 
          = 'Topicture v0.1'
          = link_to 'ENG', '/en'
          = link_to '中文', '/cn'
