!!! XML
!!!
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'site'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults
    %title ToPicTure
  %body
    .container
      .span-12
        %h1 TopicTure
      .span-12.last
        .span-12
          %ul{:id=>'site_menu'}
            %li
              = link_to 'Site', '/site'
            %li
              = link_to 'Forum', topics_path
            %li
              = link_to 'Blog', '/blog'
        .span-12
          = navigation :status
      %hr
      - if flash[:notice]
        .notice
          = flash[:notice]
      = yield :panel
      = yield
      %hr
      #footer.span-24
        %span.quiet Topicture v0.1
